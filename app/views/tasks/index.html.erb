<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <%= check_box_tag task.title, task, checked = task.completed, disabled: true %>

    <%= link_to task.title, task_path(task) %>

    <%= link_to "🗑️", task_path(task),
    method: :delete,
    data: { confirm: "Are you sure?" }
    %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a new Task", new_task_path %>

