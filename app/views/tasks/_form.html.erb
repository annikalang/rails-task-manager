<%= form_for(task) do |f| %>

<%= f.label :title %>
<br>
<%= f.text_field :title %>
<br>
<br>

<%= f.label :details %>
<br>
<%= f.text_field :details %>
<br>
<br>

<% if !task.new_record? # checkbox to mark task as completed is only shown when editing a task, not when creating a new one %>
<%= f.label :completed %> <br>
<%= f.check_box :completed %> <br>
<br>
<% end %>

<%= f.submit %>
<% end %>
